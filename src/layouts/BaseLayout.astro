---
import "@/styles/global.css"; // <-- add this (the file astro add tailwind created)
const { title = 'Gallery', structuredDataJSON, meta = {} } = Astro.props;

// Strip any HTML tags if accidentally passed in
const cleanTitle = title.replace(/<[^>]*>/g, '');
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{cleanTitle}</title>
    <meta 
      name="description" 
      content={meta.description || "K4 Studios — Painterly fine art photography and medical illustration. Explore galleries, stories, and collector notes."} 
    />

    {structuredDataJSON && (
      <script type="application/ld+json" set:html={structuredDataJSON} />
    )}

    {meta.ogTitle && (
      <>
        <meta property="og:title" content={meta.ogTitle} />
        <meta property="og:description" content={meta.ogDescription || meta.description || "K4 Studios — Painterly fine art photography and medical illustration."} />
        <meta property="og:image" content={meta.ogImage} />
        <meta property="og:type" content={meta.ogType || "website"} />
        <meta property="og:url" content={meta.ogUrl} />
      </>
    )}

    {meta.twitterTitle && (
      <>
        <meta name="twitter:card" content={meta.twitterCard || "summary_large_image"} />
        <meta name="twitter:title" content={meta.twitterTitle} />
        <meta name="twitter:description" content={meta.twitterDescription || meta.description || "K4 Studios — Painterly fine art photography and medical illustration."} />
        <meta name="twitter:image" content={meta.twitterImage} />
        <meta name="twitter:url" content={meta.twitterUrl} />
      </>
    )}

    <link href="https://fonts.googleapis.com/css2?family=Glegoo&display=swap" rel="stylesheet" />
    <!-- removed Tailwind CDN link -->
    <style>
      body {
        font-family: 'Glegoo', serif;
        background: rgb(255, 255, 255);
        margin: 0;
        padding: 0;
        color: #2e2e2eff;
        margin-top: 1rem;
      }
      .page-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0;
      }
    </style>
  </head>

  <body>
    <div class="page-container">
      <slot />
    </div>
    <div id="overlay-root"></div>
  </body>
</html>
