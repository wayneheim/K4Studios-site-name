---
import "@/styles/global.css";
const { title = "Gallery", structuredDataJSON, meta = {} } = Astro.props;
const fallbackTitle = meta.title || title || "K4 Studios â€“ Fine Art Photography";
const fallbackDescription =
  meta.description ||
  "Discover painterly fine art photography, Western stories, and historical portraits by Wayne Heim. Explore galleries, stories, and limited edition prints from K4 Studios.";
const cleanTitle = fallbackTitle.replace(/<[^>]*>/g, '');
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{cleanTitle}</title>
    <meta name="description" content={fallbackDescription} />

    {structuredDataJSON && (
      <script type="application/ld+json" set:html={structuredDataJSON} />
    )}

    {meta.ogTitle && (
      <>
        <meta property="og:title" content={meta.ogTitle} />
        <meta property="og:description" content={meta.ogDescription || fallbackDescription} />
        <meta property="og:image" content={meta.ogImage} />
        <meta property="og:type" content={meta.ogType || "website"} />
        <meta property="og:url" content={meta.ogUrl} />
      </>
    )}
    {meta.twitterTitle && (
      <>
        <meta name="twitter:card" content={meta.twitterCard || "summary_large_image"} />
        <meta name="twitter:title" content={meta.twitterTitle} />
        <meta name="twitter:description" content={meta.twitterDescription || fallbackDescription} />
        <meta name="twitter:image" content={meta.twitterImage} />
        <meta name="twitter:url" content={meta.twitterUrl} />
      </>
    )}

    <link href="https://fonts.googleapis.com/css2?family=Glegoo&display=swap" rel="stylesheet" />
    <!-- NO Tailwind CDN here! -->
  </head>

  <body>
    <div class="page-container">
      <slot />
    </div>
    <div id="overlay-root"></div>
  </body>
</html>
