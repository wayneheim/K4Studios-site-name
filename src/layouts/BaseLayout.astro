---
const { title = 'Gallery', structuredDataJSON, meta = {} } = Astro.props;

// Fallbacks for meta
const pageTitle = meta.title || title || 'K4 Studios â€“ Fine Art Photography';
const pageDescription =
  meta.description ||
  'Discover painterly fine art photography, Western stories, and historical portraits by Wayne Heim. Explore galleries, stories, and limited edition prints from K4 Studios.';

// Strip any HTML tags if accidentally passed in
const cleanTitle = pageTitle.replace(/<[^>]*>/g, '');
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{cleanTitle}</title>
    <meta name="description" content={pageDescription} />

    {structuredDataJSON && (
      <script type="application/ld+json" set:html={structuredDataJSON} />
    )}

    {meta.ogTitle && (
      <>
        <meta property="og:title" content={meta.ogTitle} />
        <meta property="og:description" content={meta.ogDescription || pageDescription} />
        <meta property="og:image" content={meta.ogImage} />
        <meta property="og:type" content={meta.ogType || "website"} />
        <meta property="og:url" content={meta.ogUrl} />
      </>
    )}
    {meta.twitterTitle && (
      <>
        <meta name="twitter:card" content={meta.twitterCard || "summary_large_image"} />
        <meta name="twitter:title" content={meta.twitterTitle} />
        <meta name="twitter:description" content={meta.twitterDescription || pageDescription} />
        <meta name="twitter:image" content={meta.twitterImage} />
        <meta name="twitter:url" content={meta.twitterUrl} />
      </>
    )}

    <link href="https://fonts.googleapis.com/css2?family=Glegoo&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <style>
      body {{
        font-family: 'Glegoo', serif;
        background: rgb(255, 255, 255);
        margin: 0;
        padding: 0;
        color: #2e2e2eff;
        margin-top: 1rem;
      }}
      .page-container {{
        max-width: 1200px;
        margin: 0 auto;
        padding: 0;
      }}
    </style>
  </head>

  <body>
    <div class="page-container">
      <slot />
    </div>
    <div id="overlay-root"></div>
  </body>
</html>
