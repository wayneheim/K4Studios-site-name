---
import GalleryShell from "@/components/GalleryShell-Landscapes-Location-International.astro";
import { entranceData as ColorEntranceData } from "@/data/Galleries/Painterly-Fine-Art-Photography/Landscapes/By-Location/International/ColorEntranceData.ts";
import { galleryData } from "@/data/Galleries/Painterly-Fine-Art-Photography/Landscapes/By-Location/International/Gallery.mjs";

export async function getStaticPaths() {
  return galleryData.map(img => ({
    params: { id: img.id },
  }));
}

const { id } = Astro.params;
const isValidId = galleryData.some(img => img.id === id);
if (!isValidId) throw new Error(`Image with id ${id} not found.`);
---

<GalleryShell 
  breadcrumb={ColorEntranceData.breadcrumb} 
  entranceData={ColorEntranceData}
  initialImageId={id}
/>
