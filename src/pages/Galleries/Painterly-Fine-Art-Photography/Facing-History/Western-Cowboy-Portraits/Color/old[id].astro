---
import ChapterCowboyColor from '../../../../../../components/Chapter-CowboyColor.jsx';

import { galleryData } from '../../../../../../data/galleries/Painterly-Western-Cowboy-Portraits/Color.mjs';
import '../../../../../../styles/gallerynav.css';
import '../../../../../../components/ScrollFlipZoomStyles.css';
import '../../../../../../styles/global.css';

export async function getStaticPaths() {
  return galleryData.map(img => ({
    params: { id: img.id },
  }));
}

const { id } = Astro.params;
const isValidId = galleryData.some(img => img.id === id);
if (!isValidId) throw new Error(`Image with id ${id} not found.`);
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Western Cowboy Portrait - Chapter View</title>

    <!-- ✅ Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Glegoo:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet" />

    <!-- Optional: prevent flash of unstyled content -->
    <style>
      body {
        opacity: 0;
        transition: opacity 0.2s ease-in-out;
      }
    </style>
    <script>
      window.addEventListener("DOMContentLoaded", () => {
        document.body.style.opacity = "1";
      });
    </script>
  </head>

  <body>
    <!-- ✅ Hydrated React component -->
    <ChapterCowboyColor client:load initialImageId={id} />
  </body>
</html>
