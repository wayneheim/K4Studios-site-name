---
import GalleryShell from '../../../../../..//../../components/GalleryShell-WWIIWar-BW.astro';
import { entranceData as BWEntranceData } from "../../../../../..//../../data/Galleries/Painterly-Fine-Art-Photography/Facing-History/WWII/Machines/BWEntranceData.ts";

import { galleryData } from '../../../../../..//../../data/Galleries/Painterly-Fine-Art-Photography/Facing-History/Roaring-20s/Black-White.mjs';

export async function getStaticPaths() {
  return galleryData.map(img => ({
    params: { id: img.id },
  }));
}

const { id } = Astro.params;
const isValidId = galleryData.some(img => img.id === id);
if (!isValidId) throw new Error(`Image with id ${id} not found.`);
---

<GalleryShell 
  breadcrumb={BWEntranceData.breadcrumb} 
  entranceData={BWEntranceData}
  initialImageId={id}
/>
