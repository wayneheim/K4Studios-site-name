---
import Layout from '../layouts/BaseLayout.astro'; // Adjust if needed
---

<Layout title="Contact Wayne Heim – K4 Studios">
  <main class="contact-page">
    <div class="content">
      <div class="logo-wrapper">
        <a href="/">
          <img src="/images/K4Logo-web.jpg" alt="K4 Studios logo" class="k4-logo" />
        </a>
      </div>

      <h1>Contact Wayne Heim</h1>
      <p>
        I love hearing from collectors, curators, historians, and fellow artists. Whether you're interested in a print,
        have a question about my process, or just want to say hello — drop me a line.
      </p>

      <div class="email-block">
        <a href="mailto:wayneheim@aol.com" class="email-link">wayneheim@aol.com</a>
      </div>

      <p class="note">I usually respond within 1–2 business days.</p>

      <div class="contact-footer">
        <a href="#" onclick="history.back(); return false;" class="home-link">← Go Back</a>

      </div>
    </div>
  </main>

  <style>
    .contact-page {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'Glegoo', serif;
      background-color: #fff;
      padding: 2rem;
      text-align: center;
    }

    .content {
      max-width: 600px;
      width: 100%;
    }

    .logo-wrapper {
      margin-bottom: 2rem;
      display: flex;
      justify-content: center;
    }

    .k4-logo {
      height: 90px;
      width: auto;
      filter: grayscale(100%);
      opacity: 0.9;
      transition: opacity 0.3s ease, filter 0.3s ease;
    }

    .k4-logo:hover {
      filter: grayscale(30%);
      opacity: 1;
    }

    h1 {
      font-size: 2rem;
      color: #322;
      margin-bottom: 1.25rem;
    }

    p {
      font-size: 1.05rem;
      line-height: 1.6;
      color: #444;
    }

    .email-block {
      margin: 2.5rem 0 1rem;
    }

    .email-link {
      display: inline-block;
      font-size: 1.25rem;
      font-weight: bold;
      color: #5f574b;
      text-decoration: none;
      border-bottom: 2px solid transparent;
      transition: border 0.2s ease, color 0.2s ease;
    }

    .email-link:hover {
      color: darkred;
      border-bottom: 2px solid darkred;
    }

    .note {
      font-size: 0.95rem;
      color: #777;
      margin-top: -1rem;
    }

    .contact-footer {
      margin-top: 3rem;
    }

    .home-link {
      font-size: 0.95rem;
      color: #444;
      text-decoration: none;
      border-bottom: 1px solid transparent;
      transition: border 0.2s ease, color 0.2s ease;
    }

    .home-link:hover {
      color: darkred;
      border-bottom: 1px solid darkred;
    }
  </style>
</Layout>
