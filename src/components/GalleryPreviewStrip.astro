---
interface Props {
  images: {
    id: string;
    title?: string;
    alt?: string;
    src: string;
    visibility?: string;
  }[];
  path: string;
  limit?: number;
}

const { images, path, limit = 6 } = Astro.props;

function shuffle<T>(arr: T[]): T[] {
  return arr
    .map(value => ({ value, sort: Math.random() }))
    .sort((a, b) => a.sort - b.sort)
    .map(({ value }) => value);
}

const visibleImages = shuffle(
  images.filter(img => img.visibility !== "ghost")
).slice(0, limit);

const middleIndex = Math.floor(visibleImages.length / 2);
---

<section class="preview-strip-wrapper fade-strip" id="preview-strip" aria-label="Gallery preview strip">
  <div class="preview-label-frame">
    <span class="hr-line hr-line-left" />
    <span class="preview-label">Gallery Preview</span>
    <span class="hr-line hr-line-right" />
  </div>

  <div class="preview-strip">
    {visibleImages.map((img, index) => {
      const offset = index - middleIndex;
      const delay = Math.abs(offset) * 100 + 400;
      const direction = offset === 0 ? "center" : offset < 0 ? "left" : "right";
      return (
        <a
          href={`${path}/${img.id}`}
          class={`preview-thumb anim-${direction}`}
          title={img.title ?? img.alt ?? "Gallery image"}
          style={`animation-delay: ${delay}ms`}
        >
          <img
            src={img.src}
            alt={img.alt ?? img.title ?? "Gallery image"}
            loading="lazy"
          />
        </a>
      );
    })}
  </div>

  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      const cartIcon = document.querySelector(".lucide-shopping-cart");
      const strip = document.getElementById("preview-strip");
      if (cartIcon && strip) {
        strip.style.display = "none";
      }
    });
  </script>
</section>

<style>
  .preview-strip-wrapper {
    margin-top: 2.5rem;
    padding: 1rem 0;
    opacity: 0;
    animation: fadeStripIn 0.4s ease forwards;
    animation-delay: 850ms;
  }

  @keyframes fadeStripIn {
    to {
      opacity: 1;
    }
  }

  .preview-label-frame {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .preview-label {
    font-size: 1.2rem;
    font-weight: 500;
    color: #444;
    font-family: 'Glegoo', serif;
    opacity: 0;
    animation: fadeLabelIn 0.75s ease-out forwards;
    animation-delay: 600ms;
    white-space: nowrap;
  }

  .hr-line {
    display: inline-block;
    height: 1px;
    background-color: #ccc;
    flex-grow: 1;
    max-width: 300px;
    transform: scaleX(0);
    opacity: 0;
  }

  .hr-line-left {
    transform-origin: right;
    animation: lineGrowLeft 1.2s ease-out forwards;
    animation-delay: 1200ms;
  }

  .hr-line-right {
    transform-origin: left;
    animation: lineGrowRight 1.2s ease-out forwards;
    animation-delay: 1200ms;
  }

  @keyframes fadeLabelIn {
    to {
      opacity: 0.75;
    }
  }

  @keyframes lineGrowLeft {
    to {
      transform: scaleX(1);
      opacity: 1;
    }
  }

  @keyframes lineGrowRight {
    to {
      transform: scaleX(1);
      opacity: 1;
    }
  }

  .preview-strip {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    gap: 1rem;
    justify-content: center;
    padding: 0 1rem;
  }

  .preview-thumb {
    flex: 0 0 auto;
    width: 110px;
    height: 110px;
    border-radius: 6px;
    overflow: hidden;
    display: block;
    border: 2px solid #ccc;
    opacity: 0;
    transform: scale(0.95);
    animation: fadeInCenter 2.0s ease forwards;
  }

  .preview-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .anim-left {
    animation-name: fadeSlideLeft;
  }

  .anim-right {
    animation-name: fadeSlideRight;
  }

  .anim-center {
    animation-name: fadeInCenter;
  }

  @keyframes fadeInCenter {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes fadeSlideLeft {
    0% {
      opacity: 0;
      transform: translateX(30px) scale(0.9);
    }
    100% {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
  }

  @keyframes fadeSlideRight {
    0% {
      opacity: 0;
      transform: translateX(-30px) scale(0.9);
    }
    100% {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
  }
</style>
